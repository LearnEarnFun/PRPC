      <label>Policy Number:</label>
      <input type="text" name="name" class="form-control" value="US1" required="">
	  <label>Tower Number:</label>
      <input type="text" name="towernum" class="form-control" value="A" required="">

      <label>Limit:</label>
      <input type="text" name="limit" class="form-control" value="1,000,000" required="">
	  <label>Attachment Point:</label>
      <input type="text" name="ap" class="form-control" value="0" required="">
